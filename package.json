{
  "name": "@forthtilliath/react-use-form-fields-ref",
  "version": "0.1.0",
  "description": "A custom React hook, useFormFieldsRef, that creates an object with references to form inputs and provides methods to get and set their values, as well as to create FormData for form submissions.",
  "main": "./src/useFormFieldsRef.ts",
  "keywords": [
    "react",
    "hook",
    "custom hook",
    "useRef",
    "form",
    "fields",
    "references",
    "input",
    "FormData"
  ],
  "author": "forthtilliath",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "lint-fix": "eslint . --fix",
    "prepare": "husky install",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Forthtilliath/react-use-form-fields-ref.git"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.8",
    "@typescript-eslint/parser": "^5.59.8",
    "babel-core": "^6.26.3",
    "babel-loader": "^9.1.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.3.7",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
